<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/first_grid_sdv"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:failureImage="@mipmap/computer"
        app:placeholderImage="@mipmap/computer" />

    <TextView
        android:id="@+id/first_grid_tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示信息"
        android:textColor="#000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/first_grid_tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="显示价格"
            android:layout_centerVertical="true"
            android:textColor="#ff3660" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="看相似"
            android:textColor="#a19595"
            android:layout_alignParentRight="true"
            android:background="@null"/>

    </RelativeLayout>

</LinearLayout>